---
import { decomposeTechnique, ICON_HEART, ICON_COMMUNITY, isCommunityNade, type Nade } from '../lib/nades';

interface Props {
  nade: Nade;
  idx: number;
  bookmarked?: boolean;
}

const { nade, idx, bookmarked = false } = Astro.props;
const title = `${nade.titleTo} from ${nade.titleFrom}`;
const sideLabel = nade.team === 't' ? 'T' : 'CT';
const techComponents = decomposeTechnique(nade.technique);
const isCommunity = isCommunityNade(nade);

const frameBase = `data/${nade.map}/${nade.slug}`;
---

<div
  class={`nade-card${bookmarked ? ' bookmarked-card' : ''}`}
  data-map={nade.map}
  data-side={nade.team}
  data-idx={idx}
  data-slug={nade.slug}
>
  <img
    class="card-img"
    src={`${frameBase}/result.jpg`}
    alt={title}
    loading="lazy"
  />
  <video
    class="card-video"
    src={`${frameBase}/result_thumb.mp4`}
    muted
    loop
    playsinline
    preload="none"
  ></video>
  <div class="card-overlay">
    <span class={`tag map-${nade.map}`}>{nade.map}</span>
    <span class={`tag side-${nade.team}`}>{sideLabel}</span>
  </div>
  <button
    class={`bookmark-btn${bookmarked ? ' bookmarked' : ''}`}
    data-slug={nade.slug}
    title="Bookmark"
  >
    <span class="tech-icon" set:html={ICON_HEART} />
  </button>
  <div class="card-label">
    <span class="card-title">{title}</span>
    <span class="card-tech">
      {techComponents.map(c => (
        <span class="tech-icon tech-icon-sm" title={c.label} set:html={c.icon} />
      ))}
      {isCommunity && <span class="community-badge" title="Community submitted" set:html={ICON_COMMUNITY} />}
    </span>
  </div>
</div>
